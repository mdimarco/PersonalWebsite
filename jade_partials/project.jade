mixin background-icon(name, text)
	a(id="#{name}-background-img", class="background-img", href="##{name}")
		div(class="project-select-panel-text")&attributes(attributes) #{text}

mixin project-title(title)
	div(class="project-title")
		h4 #{title}

mixin project-back-button(name)
	a(href="#projects")
		div(id="#{name}-back")
			i(class="fa fa-arrow-left fa-3x")

section(id="projects")

	//Control Panel
	div(id="project-select")
		div(class="project-title")
			h1 Projects
			hr(class="logo-sep")
		div(class="project-select-panel")
			+background-icon("square", "Square")
			+background-icon("yahoo", "Yahoo")
			+background-icon("ibm", "IBM")

			+background-icon("clinch", "Clinch")
			+background-icon("deepcraft", "Deepcraft")
			+background-icon("gendid", "Gender Guesser")(class="project-select-panel-text-2lines")

	//Square
	div(id="square")
		+project-back-button("square")
		img(class="logo", src="images/square.png")
		+project-title("Solutions Engineering Intern (Summer 2015)")

		div(id="register-content", class="project-content project-content-square")
			div(class="project-icon")
				i(class="fa fa-android fa-3x")
			h3 Register API
			div(class="project-text-container")
				p 
					| Created an API within Square's Android Register app, which allows merchants with their 
					| own native/web applications to utilize Square, unblocking an estimated $20M in GPV
		div(id="largesellers-content", class="project-content project-content-square")
			div(class="project-icon")
				i(class="fa fa-briefcase fa-3x")
			h3 Large Sellers
			div(class="project-text-container")
				p 
					| Lead meetings with external customers detailing technical solutions Square could provide to mid/large size merchants, from API integrations to potential custom software solutions
		div(id="hackweek-content", class="project-content project-content-square")
			div(class="project-icon")
				i(class="fa fa-usb fa-3x")
			h3 Hackweek
			div(class="project-text-container")
				p 
					| Created and deployed a hierarchical company org chart using D3.js. Directed a Square 
					| Interns Summer 2015 music video
		
	
	//Yahoo
	div(id="yahoo")
		+project-back-button("yahoo")
		img(class="logo", src="images/yahoo_logo.svg")
		+project-title("Cloud Services Intern (Summer 2014)")
	
		div(class="project-content")
			div(class="project-icon")
				i(class="fa fa-globe fa-3x")
			h3 YWorld
			div(class="project-text-container")
				p 
					| Created world map visualization of interdatacenter traffic for Yahoo Netproject Operations. 
					| Displayed realtime gridbased data of latency and packet loss using Node.js, NPM, and D3.js 
					| deployed on internal virtual machines
		div(class="project-content")
			div(class="project-icon")
				i(class="fa fa-book fa-3x")
			h3 IPython Notebooks
			div(class="project-text-container")
				p 
					| Created proof of concept collaborative environment for dashboarding, and adhoc data 
					| analysis of production monitoring data using Python, matplotlib, OpenTSDB, and bash
		

	//IBM
	div(id="ibm")
		+project-back-button("ibm")
		img(class="logo", src="images/ibm.png")
		+project-title("High Performance Computing Intern (Summer 2013)")
	
		div(class="project-content")
			div(class="project-icon")
				i(class="fa fa-line-chart fa-3x")
			h3 Cost Analysis Tool
			div(class="project-text-container")
				p 
					| Wrote service in IBM's XCAT, Perl, and Python that monitored and graphed power consumption 
					| of the p775 series supercomputer in an easy to view dashboard
		div(class="project-content")
			div(class="project-icon")
				i(class="fa fa-flask fa-3x")
			h3 IO Tech Lab
			div(class="project-text-container")
				p 
					| IO tech lab - Wrote scripts for power management, netproject connections, and big data 
					| analytics on power readings of the p775 supercomputer, as well as IO hardware
		

	//Clinch
	div(id="clinch")
		+project-back-button("clinch")

	//Deepcraft
	div(id="deepcraft")
		+project-back-button("deepcraft")
	div(id="gendid")
		+project-back-button("gendid")