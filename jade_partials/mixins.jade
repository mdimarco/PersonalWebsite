
mixin background-icon(name, text, link)
	a(id="#{name}-background-img", class="background-img", href=link)
		div(class="work-select-panel-text")&attributes(attributes) #{text}


mixin personal-background-icon(name, text, text2)
	a(id="#{name}-background-img", class="background-img")
		div(class="work-select-panel-text personal-title")&attributes(attributes) #{text}
		div(class="work-select-panel-text small-text") #{text2}


//Work Mixins
mixin work-title(title)
	div(class="section-title")
		h4 #{title}

mixin work-back-button(name)
	a
		div(id="#{name}-back")
			i(class="fa fa-arrow-left fa-3x")

//Contact Mixins
mixin social-icon(iconName, text, link)
	div(class="contact-icon-wrapper")
		a(href="#{link}", class="contact-icon-link")
			i(class="fa fa-#{iconName} contact-icon")
			p #{text}

